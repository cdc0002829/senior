<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5C5C5C"
    tools:context="com.kotei.yangz.messagecenter.activity.MainActivity">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/no_data_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/no_message"
            android:textColor="@android:color/white"
            android:textSize="60px" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="1552px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="124px"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/clean_all_bt"
        android:layout_width="140px"
        android:layout_height="70px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30px"
        android:background="@drawable/m_button_selector"
        android:gravity="center"
        android:text="@string/clean"
        android:textColor="@android:color/white"
        android:textSize="36px" />
</RelativeLayout>